[linuxhq-{{ linuxhq_pkg }}]
name=linuxhq-{{ linuxhq_pkg }}
baseurl=https://packagecloud.io/linuxhq/{{ linuxhq_pkg }}/el/{{ ansible_distribution_major_version }}/$basearch
repo_gpgcheck={{ '1' if linuxhq_repo_gpgcheck is defined and linuxhq_repo_gpgcheck else '0' }}
gpgcheck={{ '1' if linuxhq_gpgcheck is defined and linuxhq_gpgcheck else '0' }}
enabled={{ '1' if linuxhq_enabled is defined and linuxhq_enabled else '0' }}
gpgkey=https://packagecloud.io/linuxhq/{{ linuxhq_pkg }}/gpgkey
sslverify={{ '1' if linuxhq_sslverify is defined and linuxhq_repo_gpgcheck else '0' }}
sslcacert={{ linuxhq_sslcacert if linuxhq_sslcacert is defined else '/etc/pki/tls/certs/ca-bundle.crt' }}

[linuxhq-{{ linuxhq_pkg }}-source]
name=linuxhq-{{ linuxhq_pkg }}-source
baseurl=https://packagecloud.io/linuxhq/{{ linuxhq_pkg }}/el/{{ ansible_distribution_major_version }}/SRPMS
repo_gpgcheck={{ '1' if linuxhq_source_repo_gpgcheck is defined and linuxhq_source_repo_gpgcheck else '0' }}
gpgcheck={{ '1' if linuxhq_source_gpgcheck is defined and linuxhq_source_gpgcheck else '0' }}
enabled={{ '1' if linuxhq_source_enabled is defined and linuxhq_source_enabled else '0' }}
gpgkey=https://packagecloud.io/linuxhq/{{ linuxhq_pkg }}/gpgkey
sslverify={{ '1' if linuxhq_sslverify is defined and linuxhq_repo_gpgcheck else '0' }}
sslcacert={{ linuxhq_sslcacert if linuxhq_sslcacert is defined else '/etc/pki/tls/certs/ca-bundle.crt' }}
